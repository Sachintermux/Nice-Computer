<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting_Activity">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:text="Message"
      android:id="@+id/static_message"/>

  <EditText
      android:id="@+id/edt_message"
      android:layout_width="346dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/static_message"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="10dp"
      android:hint="Write Your Message"
      android:inputType="textLongMessage" />

  <ImageView
      android:id="@+id/message_hint"
      android:layout_width="56dp"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/edt_message"
      android:layout_alignBottom="@+id/edt_message"
      android:layout_alignParentEnd="true"
      android:layout_marginBottom="0dp"
      android:layout_toEndOf="@+id/edt_message"
      android:src="@drawable/ic_baseline_error"
      android:onClick="message_hint"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="Save Message"
    android:layout_marginBottom="60dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:onClick="saveMessage"/>


</RelativeLayout>